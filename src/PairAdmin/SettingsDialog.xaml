<Window x:Class="PairAdmin.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PairAdmin Settings" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D30">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Settings" 
                   Foreground="White" 
                   FontSize="24" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <TabControl Grid.Row="1" Background="#3D3D40" BorderThickness="0">
            <TabItem Header="LLM Provider" Foreground="White" Background="#3D3D40">
                <StackPanel Margin="10">
                    <TextBlock Text="Select Provider:" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ProviderComboBox" 
                              SelectionChanged="ProviderComboBox_SelectionChanged"
                              Background="#4D4D50" Foreground="White" Margin="0,0,0,15">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="#4D4D50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBoxItem Content="OpenAI (GPT-4, GPT-3.5)" Tag="openai"/>
                        <ComboBoxItem Content="Google Gemini" Tag="gemini"/>
                        <ComboBoxItem Content="OpenRouter" Tag="openrouter"/>
                        <ComboBoxItem Content="Ollama (Local)" Tag="ollama"/>
                    </ComboBox>

                    <StackPanel x:Name="ApiKeyPanel">
                        <TextBlock Text="API Key:" Foreground="White" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ApiKeyPasswordBox" 
                                     Background="#4D4D50" 
                                     Foreground="White"
                                     Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel x:Name="OllamaUrlPanel" Visibility="Collapsed">
                        <TextBlock Text="Ollama URL:" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox x:Name="OllamaUrlTextBox" 
                                 Text="http://localhost:11434"
                                 Background="#4D4D50" 
                                 Foreground="White"
                                 Margin="0,0,0,15"/>
                    </StackPanel>

                    <TextBlock Text="Model:" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ModelComboBox" Background="#4D4D50" Foreground="White">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="#4D4D50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <Button Content="Test Connection" 
                            Click="TestConnection_Click"
                            Margin="0,15,0,0"
                            Background="#0E639C" 
                            Foreground="White"
                            Padding="10,5"/>
                    
                    <TextBlock x:Name="ConnectionStatusText" 
                               Foreground="LightGreen" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Terminal" Foreground="White" Background="#3D3D40">
                <StackPanel Margin="10">
                    <TextBlock Text="PuTTY Path:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="PuttyPathTextBox" 
                             Text="C:\Program Files\PuTTY\putty.exe"
                             Background="#4D4D50" 
                             Foreground="White"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Background="#4D4D50" 
                    Foreground="White"
                    Padding="20,8"
                    Margin="0,0,10,0"/>
            <Button Content="Save" 
                    Click="Save_Click"
                    Background="#0E639C" 
                    Foreground="White"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
