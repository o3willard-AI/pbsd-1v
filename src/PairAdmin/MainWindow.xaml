<Window x:Class="PairAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uiControls="clr-namespace:PairAdmin.UI.Controls;assembly=UI"
        mc:Ignorable="d"
        Title="PairAdmin - AI-Assisted Terminal Administration"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="400"
        MinWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" 
              Background="#2D2D30"
              Height="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Window Title -->
            <TextBlock Grid.Column="0"
                       Text="PairAdmin"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="12,0"
                       FontWeight="SemiBold"/>
            
            <!-- Window Controls -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="8,0">
                <Button Content="−" 
                        Width="46"
                        Height="32"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Click="MinimizeButton_Click"
                        WindowChrome.IsHitTestVisibleInChrome="True"/>
                <Button Content="□" 
                        Width="46"
                        Height="32"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Click="MaximizeButton_Click"
                        WindowChrome.IsHitTestVisibleInChrome="True"/>
                <Button Content="×" 
                        Width="46"
                        Height="32"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Click="CloseButton_Click"
                        WindowChrome.IsHitTestVisibleInChrome="True"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" x:Name="TerminalRow"/>
                <RowDefinition Height="4" x:Name="DividerRow"/>
                <RowDefinition Height="*" x:Name="AIChatRow"/>
            </Grid.RowDefinitions>

            <!-- Terminal Pane (Task 1.4) -->
            <uiControls:TerminalPane x:Name="TerminalPaneControl"
                                      Grid.Row="0"
                                      MinHeight="200"/>

            <!-- Resizable Divider (Placeholder for Task 10.1) -->
            <Border Grid.Row="1" 
                    Background="#2D2D30"
                    Cursor="SizeNS"
                    MouseLeftButtonDown="Divider_MouseLeftButtonDown"/>
            
            <!-- AI Chat Pane -->
            <uiControls:ChatPane x:Name="ChatPaneControl"
                                  Grid.Row="2"
                                  MinHeight="200"/>
        </Grid>
    </Grid>
</Window>
