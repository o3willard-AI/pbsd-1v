<Window x:Class="PairAdmin.UI.Dialogs.TerminalSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Terminal Setup - PairAdmin"
        Height="420"
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Terminal Configuration"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Choose how PairAdmin should handle SSH terminal connections"
                       Foreground="#808080"
                       FontSize="14"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Options -->
        <StackPanel Grid.Row="2">
            <!-- Integrated Option -->
            <Border x:Name="IntegratedOption"
                    Background="#2D2D30"
                    BorderBrush="#3F3F46"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12"
                    Cursor="Hand"
                    MouseLeftButtonDown="IntegratedOption_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton x:Name="IntegratedRadio"
                                 Grid.Column="0"
                                 VerticalAlignment="Top"
                                 Margin="0,4,12,0"
                                 GroupName="TerminalMode"
                                 IsChecked="True"/>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Integrated Terminal (Recommended)"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Use the bundled PuTTY library for seamless integration"
                                   Foreground="#AAAAAA"
                                   FontSize="13"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="+ No additional installation required"
                                       Foreground="#27AE60"
                                       FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="+ Terminal I/O captured for AI context"
                                       Foreground="#27AE60"
                                       FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock x:Name="IntegratedVersionText"
                                       Text="- May not be the latest PuTTY version"
                                       Foreground="#E67E22"
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock x:Name="IntegratedStatusText"
                               Grid.Column="2"
                               Text="Available"
                               Foreground="#27AE60"
                               FontSize="12"
                               VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <!-- External Option -->
            <Border x:Name="ExternalOption"
                    Background="#2D2D30"
                    BorderBrush="#3F3F46"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="16"
                    Cursor="Hand"
                    MouseLeftButtonDown="ExternalOption_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton x:Name="ExternalRadio"
                                 Grid.Column="0"
                                 VerticalAlignment="Top"
                                 Margin="0,4,12,0"
                                 GroupName="TerminalMode"/>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="External PuTTY"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Use your own PuTTY installation"
                                   Foreground="#AAAAAA"
                                   FontSize="13"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="+ Always use latest PuTTY version"
                                       Foreground="#27AE60"
                                       FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="+ You control updates"
                                       Foreground="#27AE60"
                                       FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="- Requires PuTTY installation"
                                       Foreground="#E67E22"
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock x:Name="ExternalStatusText"
                               Grid.Column="2"
                               Text="Not Found"
                               Foreground="#C0392B"
                               FontSize="12"
                               VerticalAlignment="Top"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="36"
                    Margin="0,0,12,0"
                    Background="#3F3F46"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
            <Button x:Name="ContinueButton"
                    Content="Continue"
                    Width="120"
                    Height="36"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Click="ContinueButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
