<UserControl x:Class="PairAdmin.UI.Controls.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PairAdmin.UI.Controls"
             xmlns:chat="clr-namespace:PairAdmin.Chat;assembly=Chat"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="350">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Styles/ChatStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource MessageBackground}"
            BorderBrush="{StaticResource MessageBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="12"
            Margin="{StaticResource MessageMargin}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header Row -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Avatar/Icon -->
                <Border Grid.Column="0"
                        Width="32"
                        Height="32"
                        CornerRadius="16"
                        Background="{StaticResource AvatarBackground}"
                        VerticalAlignment="Top">
                    <TextBlock Text="{Binding AvatarText, RelativeSource={RelativeSource AncestorType=local:ChatMessageControl}}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Sender Name -->
                <TextBlock Grid.Column="1"
                           Text="{Binding SenderDisplayName}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource SenderNameColor}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0" />

                <!-- Timestamp -->
                <TextBlock Grid.Column="2"
                           Text="{Binding FormattedTimestamp}"
                           FontSize="11"
                           Foreground="{StaticResource TimestampColor}"
                           VerticalAlignment="Center" />
            </Grid>

            <!-- Message Content -->
            <Grid Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding CommandBlocks, RelativeSource={RelativeSource AncestorType=local:ChatMessageControl}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type chat:CommandBlock}">
                                    <local:CommandBlockControl Margin="0,0,0,8" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="ContentTextBlock"
                                   Text="{Binding Content}"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Foreground="{StaticResource MessageTextColor}"
                                   LineHeight="20"
                                   Visibility="{Binding HasCommandBlocks, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Streaming Indicator -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Visibility="{Binding IsStreaming, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="â—"
                               FontSize="8"
                               Foreground="#3498DB"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0" />
                    <TextBlock Text="Streaming..."
                               FontSize="11"
                               Foreground="#7F8C8D"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Token Count -->
                <TextBlock Grid.Column="1"
                           Text="{Binding TokenCount, StringFormat='{}{0} tokens'}"
                           FontSize="11"
                           Foreground="{StaticResource MetadataColor}"
                           Visibility="{Binding TokenCount, Converter={StaticResource PositiveIntToVisibilityConverter}}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
