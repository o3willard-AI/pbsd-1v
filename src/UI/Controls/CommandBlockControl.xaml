<UserControl x:Class="PairAdmin.UI.Controls.CommandBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PairAdmin.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="80"
             d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Styles/ChatStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource CodeBlockBackground}"
            BorderBrush="{StaticResource CodeBlockBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Row -->
            <Grid Grid.Row="0" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Language Indicator -->
                <Border Grid.Column="0"
                        Background="{StaticResource LanguageTagBackground}"
                        Padding="4,2"
                        CornerRadius="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                    <TextBlock Text="{Binding Language, RelativeSource={RelativeSource AncestorType=local:CommandBlockControl}}"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource LanguageTagForeground}"
                               TextTransform="Uppercase" />
                </Border>

                <!-- Copy Button -->
                <Button Grid.Column="1"
                        Content="ðŸ“‹"
                        ToolTip="Copy to clipboard"
                        Width="24"
                        Height="24"
                        Padding="0"
                        Margin="4,0,0,0"
                        Style="{StaticResource IconButtonStyle}"
                        Click="CopyButton_Click" />
            </Grid>

            <!-- Code Content -->
            <Border Grid.Row="1"
                    Background="Transparent"
                    Padding="8,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="CodeTextBox"
                             Text="{Binding Code, RelativeSource={RelativeSource AncestorType=local:CommandBlockControl}}"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             FontFamily="Consolas, Courier New, monospace"
                             FontSize="12"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0"
                             VerticalScrollBarVisibility="Hidden"
                             HorizontalScrollBarVisibility="Hidden">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="{StaticResource CodeForegroundColor}" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="IBeam" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</UserControl>
