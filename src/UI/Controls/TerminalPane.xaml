<UserControl x:Class="PairAdmin.UI.Controls.TerminalPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border Background="#1E1E1E" BorderThickness="0,0,0,1" BorderBrush="#3F3F46">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#2D2D30" Height="32">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                    <TextBlock Text="Terminal" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ConnectionStatusText" Text=" - Disconnected" Foreground="#808080" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
            <Border Grid.Row="1" Background="#252526" Padding="8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Host:" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                    <TextBox x:Name="HostnameTextBox" Background="#3C3C3C" Foreground="White" Text="localhost" Width="120" Margin="4,0,0,0"/>
                    <TextBlock Text="Port:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <TextBox x:Name="PortTextBox" Background="#3C3C3C" Foreground="White" Text="22" Width="50" Margin="4,0,0,0"/>
                    <TextBlock Text="User:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <TextBox x:Name="UsernameTextBox" Background="#3C3C3C" Foreground="White" Width="100" Margin="4,0,0,0"/>
                    <Button x:Name="ConnectButton" Content="Connect" Background="#27AE60" Foreground="White" Margin="12,0,0,0" Padding="16,4" Click="ConnectButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
