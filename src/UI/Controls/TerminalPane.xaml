<UserControl x:Class="PairAdmin.UI.Controls.TerminalPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Background="#1E1E1E"
            BorderThickness="0,0,0,1"
            BorderBrush="#3F3F46">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Terminal Header -->
            <Grid Grid.Row="0"
                  Background="#2D2D30"
                  Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                    <TextBlock Text="Terminal"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="ConnectionStatusText"
                               Text=" - Disconnected"
                               Foreground="#808080"
                               FontWeight="Normal"/>
                </StackPanel>

                <!-- Disconnect Button -->
                <Button x:Name="DisconnectButton"
                        Grid.Column="1"
                        Content="Disconnect"
                        Margin="8,4"
                        Padding="8,2"
                        Background="#C0392B"
                        Foreground="White"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Click="DisconnectButton_Click"/>
            </Grid>

            <!-- Connection Bar -->
            <Border x:Name="ConnectionBar"
                    Grid.Row="1"
                    Background="#252526"
                    Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hostname -->
                    <TextBlock Grid.Column="0"
                               Text="Host:"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="HostnameTextBox"
                             Grid.Column="1"
                             Background="#3C3C3C"
                             Foreground="White"
                             BorderBrush="#555555"
                             Padding="4,2"
                             VerticalContentAlignment="Center"
                             Text="localhost"/>

                    <!-- Port -->
                    <TextBlock Grid.Column="2"
                               Text="Port:"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"
                               Margin="12,0,8,0"/>
                    <TextBox x:Name="PortTextBox"
                             Grid.Column="3"
                             Background="#3C3C3C"
                             Foreground="White"
                             BorderBrush="#555555"
                             Padding="4,2"
                             VerticalContentAlignment="Center"
                             Text="22"/>

                    <!-- Username -->
                    <TextBlock Grid.Column="4"
                               Text="User:"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"
                               Margin="12,0,8,0"/>
                    <TextBox x:Name="UsernameTextBox"
                             Grid.Column="5"
                             Background="#3C3C3C"
                             Foreground="White"
                             BorderBrush="#555555"
                             Padding="4,2"
                             VerticalContentAlignment="Center"/>

                    <!-- Connect Button -->
                    <Button x:Name="ConnectButton"
                            Grid.Column="6"
                            Content="Connect"
                            Margin="12,0,0,0"
                            Padding="16,4"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Click="ConnectButton_Click"/>
                </Grid>
            </Border>

            <!-- Terminal Content Area -->
            <Border x:Name="TerminalContentArea"
                    Grid.Row="2"
                    Background="#0C0C0C">
                <!-- This is where PuTTY window will be embedded -->
                <Grid x:Name="PuTTYHostContainer">
                    <!-- Placeholder shown when not connected -->
                    <StackPanel x:Name="PlaceholderPanel"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="SSH Terminal"
                                   Foreground="#00FF00"
                                   FontSize="24"
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Enter connection details above and click Connect"
                                   Foreground="#808080"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MaxWidth="400">
                            <Run Text="PuTTY must be installed and available in your system PATH."/>
                            <LineBreak/>
                            <Run Text="Download from: https://www.putty.org"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
