<UserControl x:Class="PairAdmin.UI.Controls.ChatPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PairAdmin.UI.Controls"
             xmlns:chat="clr-namespace:PairAdmin.Chat"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Styles/ChatStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#2C3E50"
                Padding="12,8"
                BorderBrush="#34495E"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="AI Chat Assistant"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <Button x:Name="SettingsButton"
                            Content="âš™"
                            ToolTip="Settings"
                            Width="32"
                            Height="32"
                            Margin="4,0"
                            Style="{StaticResource IconButtonStyle}"
                            Click="SettingsButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Message List -->
        <ScrollViewer x:Name="MessageScrollViewer"
                     Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="12">
            <ItemsControl x:Name="MessagesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type chat:ChatMessage}">
                        <local:ChatMessageControl Margin="0,8" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input Section -->
        <Border Grid.Row="2"
                Background="White"
                Padding="12"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Input TextBox -->
                <TextBox x:Name="InputTextBox"
                         Grid.Row="0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"
                         Padding="8"
                         FontSize="14"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         Background="White"
                         MinHeight="60"
                         MaxHeight="150"
                         VerticalContentAlignment="Top"
                         KeyDown="InputTextBox_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#3498DB" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Control Bar -->
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Info Text -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock x:Name="TokenCountText"
                                   Text="Tokens: 0"
                                   FontSize="11"
                                   Foreground="#7F8C8D"
                                   Margin="0,0,16,0" />
                        <TextBlock Text="Enter to send, Shift+Enter for new line"
                                   FontSize="11"
                                   Foreground="#95A5A6" />
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <Button x:Name="CopyLastButton"
                                Content="ðŸ“‹ Copy Last"
                                ToolTip="Copy last command"
                                Margin="0,0,8,0"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="CopyLastButton_Click" />
                        <Button x:Name="ClearButton"
                                Content="ðŸ—‘ Clear"
                                ToolTip="Clear chat history"
                                Margin="0,0,8,0"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="ClearButton_Click" />
                        <Button x:Name="SendButton"
                                Content="Send"
                                Width="80"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="SendButton_Click">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource NotEmptyConverter}">
                                    <Binding Path="Text" ElementName="InputTextBox" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
