<Project>
  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.17763.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- Version Information -->
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <InformationalVersion>1.0.0</InformationalVersion>
    
    <!-- Package Information -->
    <Authors>PairAdmin Team</Authors>
    <Company>PairAdmin</Company>
    <Product>PairAdmin</Product>
    <Description>AI-Assisted Terminal Administration Extension for PuTTY</Description>
    <Copyright>Copyright Â© 2024</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>images\icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/sblanken/PairAdmin</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    
    <!-- Source Control -->
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    
    <!-- Code Analysis -->
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    
    <!-- Treat Warnings -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <WarningLevel>5</WarningLevel>
    
    <!-- Debugging -->
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    
    <!-- Publishing -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    
    <!-- Windows Specific -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>false</SelfContained>
  </PropertyGroup>

  <!-- Debug Configuration -->
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
  </PropertyGroup>

  <!-- Release Configuration -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>

  <!-- NuGet Package Properties -->
  <PropertyGroup>
    <NuGetPackageRoot>$(UserProfile)\.nuget\packages</NuGetPackageRoot>
  </PropertyGroup>

  <!-- Source Link -->
  <ItemGroup>
    <SourceLinkGitHubRepository Include="https://github.com/sblanken/PairAdmin" />
    <SourceLinkGitHubRepository Include="https://github.com/sblanken/PairAdmin" />
  </ItemGroup>

  <!-- Package Validation -->
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
  </ItemGroup>

</Project>
