{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "LLM": {
    "DefaultProvider": "OpenAI",
    "OpenAI": {
      "ApiKey": "",
      "BaseUrl": "https://api.openai.com/v1",
      "Model": "gpt-4",
      "MaxTokens": 4096,
      "Temperature": 0.7
    },
    "Anthropic": {
      "ApiKey": "",
      "BaseUrl": "https://api.anthropic.com/v1",
      "Model": "claude-3-opus-20240229",
      "MaxTokens": 4096,
      "Temperature": 0.7
    },
    "Google": {
      "ApiKey": "",
      "BaseUrl": "https://generativelanguage.googleapis.com/v1",
      "Model": "gemini-pro",
      "MaxTokens": 4096,
      "Temperature": 0.7
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama2",
      "MaxTokens": 4096,
      "Temperature": 0.7
    },
    "LMStudio": {
      "BaseUrl": "http://localhost:1234",
      "Model": "",
      "MaxTokens": 4096,
      "Temperature": 0.7
    }
  },
  "Context": {
    "MaxLines": 100,
    "MaxTokens": 32000
  },
  "Security": {
    "AutonomyMode": "Advisor",
    "EnableCommandValidation": true,
    "EnableSensitiveDataFiltering": true,
    "DangerousCommands": [
      "rm -rf /",
      "mkfs",
      "dd of=/dev/sd",
      ":(){:|:&};:"
    ],
    "AutoInactivityTimeoutMinutes": 30
  },
  "UI": {
    "Theme": "Dark",
    "PaneRatio": 0.5,
    "TerminalMinHeight": 200,
    "AIPaneMinHeight": 150,
    "ShowTimestamps": false
  },
  "WindowState": {
    "Width": 1200,
    "Height": 800,
    "Left": 100,
    "Top": 100,
    "IsMaximized": false
  }
}
